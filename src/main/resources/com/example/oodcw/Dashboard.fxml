<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oodcw.DashboardController">
    <VBox alignment="CENTER" prefHeight="600.0" prefWidth="400.0" spacing="15.0" styleClass="Dashboard" stylesheets="@css/Home.css">
        <Button fx:id="viewArticlesButton" onAction="#handleViewArticles" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: none;" text="View Articles">
         <font>
            <Font name="Berlin Sans FB" size="18.0" />
         </font></Button>
        <Button fx:id="viewRecommendationsButton" onAction="#handleViewRecommendations" prefHeight="50.0" prefWidth="216.0" style="-fx-background-color: none;" text="View Recommendations">
         <font>
            <Font name="Berlin Sans FB" size="18.0" />
         </font></Button>
        <Button fx:id="manageProfileButton" onAction="#handleManageProfile" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: none;" text="Manage Profile">
         <font>
            <Font name="Berlin Sans FB" size="18.0" />
         </font></Button>
        <Button fx:id="logoutButton" onAction="#handleLogout" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: none;" text="Logout">
         <font>
            <Font name="Berlin Sans FB" size="18.0" />
         </font></Button>
        <Button fx:id="homeButton" onAction="#goToHome" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: none;" text="Home">
         <font>
            <Font name="Berlin Sans FB" size="18.0" />
         </font></Button>
    </VBox>
</AnchorPane>
